/**添加
*标签
*弹窗*/
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.589);/**设置阴影半透明背景如：*/
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 80%;/**弹窗布局宽*/
  height: 350rpx;/**弹窗布局高，与下面弹出距离transform有关*/
  margin-left: 10%;
  background:  rgba(197, 236, 226, 0.555);
  transform: translateY(300%);/**弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度*/
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  border: 1px solid rgb(184, 158, 158);
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(-56%);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

