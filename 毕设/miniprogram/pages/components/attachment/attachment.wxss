/* pages/components/attachment/attachment.wxss */
page{
  background-color: rgba(200, 198, 201, 0.527);
  height:100%;
}
.pages{
  width: 96%;
  height: 99%;
  margin: 0 auto;
  overflow: hidden;
  background-color: white;
}

/* 图片 */
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;/*规定灵活的项目在必要的时候拆行或拆列*/
  justify-content: flex-start;
  background-color: white;
}
.img-box{
  border: 5rpx;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.452);
  width: 29%;
  height: 200rpx;
  margin-left: 2.5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
/* 删除图片 */
.img-delect{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
}
.img{
  width: 100%;
  height: 100%;
}
button{
  margin-top: 20rpx;
  width: 60%;
  background-color: #008888;
}
